<!-- searchBoxPlus -->
<div class="searchPlus">
	<div class="uk-grid uk-grid-small uk-child-width-expand" uk-grid>
		<div class="searchInput uk-width-expand@m">
			<div class="uk-grid uk-grid-small uk-child-width-expand" uk-grid>
				<div class="searchBox min_width-9/10 uk-width-expand@s">
