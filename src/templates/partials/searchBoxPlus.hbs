					<div class="uk-flex uk-flex-middle">
						<button id="btnAdd" class="tw-bg-transparent tw-w-full uk-button uk-button-primary"><i class="color_primary fas fa-plus fa-lg" title="新增選項"></i><span class="tw-sr-only">新增選項</span></button>
					</div>
				</div>
			</div>
		</div>
		<div class="btnSearch min_width-200 tw-text-nowrap{{#if btnSearchFull}} uk-width-1-2@m{{else}} uk-width-auto@s{{/if}}">
			<a class="{{#if btnSecondary}}btn_secondary {{else}}btn_primary {{/if}}tw-w-full uk-button uk-button-primary" href="#"><i class="tw-mr-2 fas fa-search"></i>{{searchButtonName}}</a>
