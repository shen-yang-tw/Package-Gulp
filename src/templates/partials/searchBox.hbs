{{!-- {{>searchBox select1='true' select2='true' select3='true' select4='true' select5='true'}} --}}

<!-- searchBox -->
<form onsubmit="return false;">
	<div class="uk-grid uk-grid-small uk-child-width-expand" uk-grid>
		<div class="min_width-2/3!{{#if select}} min_width-1/6!@m min_width-1/3!@l{{else}} min_width-1/2!@xl{{/if}}">
			<div class="uk-flex uk-flex-middle">
				<div class="flex-auto"><input class="uk-input" type="text" placeholder="{{placeholder}}"></div>
				{{#if 2ndInput}}
				<div class="px-2">或</div>
				<div class="flex-auto"><input class="uk-input" type="text" placeholder="{{2ndInputPlaceholder}}"></div>
				{{/if}}
				{{!-- <!-- <div class="flex-auto"><a class="btn_secondary min_width-100! w-full uk-button uk-button-primary" href="#search" uk-toggle>病症瀏覽</a></div> --> --}}
			</div>
		</div>
		{{#if select}}
			{{#if select1}}
				<div class="min_width-1/2! uk-width-auto@m">
					<div class="uk-grid uk-grid-small uk-child-width-expand" uk-grid>
						<div>
							<select class="uk-select">
								<option value="0" selected>-年-</option>
								<option value="">2020</option>
							</select>
						</div>
						<div>
							<select class="uk-select">
								<option value="0" selected>-月-</option>
								<option value="">9</option>
							</select>
						</div>
					</div>
				</div>
			{{/if}}
			{{#if select2}}
				<div class="min_width-1/2! uk-width-auto@m">
					<select class="uk-select">
						<option value="0" selected>-類別-</option>
						<option value="">全部</option>
					</select>
				</div>
			{{/if}}
			{{#if select3}}
				<div class="min_width-1/2! uk-width-auto@m">
					<select class="uk-select">
						<option value="0" selected>-資料類型-</option>
						<option value="">option</option>
					</select>
				</div>
			{{/if}}
			{{#if select4}}
				<div class="min_width-1/2! uk-width-auto@m">
					<select class="uk-select">
						<option value="0" selected>-處理狀態-</option>
						<option value="">option</option>
					</select>
				</div>
			{{/if}}
			{{#if select5}}
				<div class="min_width-1/2! uk-width-auto@m">
					<select class="uk-select">
						<option value="0" selected>-出版語文-</option>
						<option value="">option</option>
					</select>
				</div>
			{{/if}}
		{{/if}}
		<div class="min_width-100! uk-width-auto@s uk-text-nowrap">
			<button class="btn_primary w-full uk-button uk-button-primary"><i class="mr-2 fas fa-search"></i>搜尋</button>
		</div>
		{{#if 2ndButton}}
		<div class="min_width-100! uk-width-auto@s uk-text-nowrap">
			<button class="btn_primary w-full uk-button uk-button-primary">{{#if 2ndButtonFaicon}}<i class="mr-2 {{2ndButtonFaiconClasses}}"></i>{{/if}}{{2ndButtonName}}</button>
		</div>
		{{/if}}
		{{#if 3rdButton}}
		<div class="min_width-100! uk-width-auto@s uk-text-nowrap">
			<button class="btn_primary w-full uk-button uk-button-primary">{{#if 3rdButtonFaicon}}<i class="mr-2 {{3rdButtonFaiconClasses}}"></i>{{/if}}{{3rdButtonName}}</button>
		</div>
		{{/if}}
	</div>
</form>
<!-- searchBox -->